<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme -->
    <style name="Theme.CIPRA_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary branding colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Background and text colors -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>

        <!-- Transparent Status Bar (keep layout behind the status bar) -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Fully Transparent Navigation Bar -->
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Use windowTranslucentNavigation if you want translucent, but for full transparency, remove it -->
        <!-- Ensure the layout is drawn behind both system bars -->
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item> <!-- Optional, for light content on nav bar -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item> <!-- Optional, for light content on status bar -->

        <!-- Font -->
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <!-- Button Style -->
    <style name="Widget.CIPRA_App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorButton</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="cornerRadius">8dp</item> <!-- Rounded corners for buttons -->
    </style>

</resources>